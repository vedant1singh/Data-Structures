#Program to rotate elements of an array by rotating one by one
def lR(arr,d, n):
    for i in range(d):
        leftR(arr, n)
def leftR(arr, n):
    temp = arr[0]
    for i in range(n-1):
        arr[i] = arr[i+1]
    arr[n-1] = temp

arr=[1,2,3,4,5,6,7,8]
lR(arr, 3, 8)
print(arr)


#Program to rotate element of array cyclically.
def lr(arr, n):
    temp = arr[n-1]
    for i in range(n-1, 0, -1):
        arr[i]=arr[i-1]
    arr[0]= temp

arr=[1,2,3,4,5,6,7,8]
lr(arr, 8)
print(arr)
